<link rel="stylesheet" href="/css/addStudent.css">

<h1>Add a New Student</h1>


<form method="POST" action="/students/add-student">
    <div>
      <label for="name">Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div>
      <label for="college">College:</label>
      <input type="text" id="college" name="college" required>
    </div>
    <div>
      <label for="batch">Batch:</label>
      <input type="text" id="batch" name="batch" required>
    </div>
    <div>
      <label for="status">Status:</label>
      <select id="status" name="status" required>
        <option value="placed">Placed</option>
        <option value="not_placed">Not Placed</option>
      </select>
    </div>
    <div>
      <label for="dsaFinalScore">DSA Final Score:</label>
      <input type="number" id="dsaFinalScore" name="courseScores[dsaFinalScore]" required>
    </div>
    <div>
      <label for="webDFinalScore">WebD Final Score:</label>
      <input type="number" id="webDFinalScore" name="courseScores[webDFinalScore]" required>
    </div>
    <div>
      <label for="reactFinalScore">React Final Score:</label>
      <input type="number" id="reactFinalScore" name="courseScores[reactFinalScore]" required>
    </div>
    <button type="submit">Submit</button>
</form>

  





